@model InvoiceItemViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this invoice item?</h3>
</div>

<div>
    <h4>Invoice item</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceItemSubject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceItemSubject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger mr-2" />
        <a asp-action="Index" asp-route-invoiceId="@Model.InvoiceId" class="btn btn-outline-info">Back to invoice</a>
    </form>
</div>
