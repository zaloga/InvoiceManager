@model InvoiceItemViewModel
@inject AppDbContext context

@{
    ViewData["Title"] = "Details";
    Invoice invoice = await context.Invoices.FindAsync(Model.InvoiceId);
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Invoice item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceItemSubject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceItemSubject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    @if (!invoice.GetInvoiceIsPaid())
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Edit</a>
    }
    <a asp-action="Index" asp-route-invoiceId="@Model.InvoiceId" class="btn btn-outline-info">Back to invoice</a>
</div>
